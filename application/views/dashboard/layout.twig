{% set baseUrl = app.request.baseUrl~'/' %}
{% set noThrow = "The user provider must return a UserInterface object." %}
{% if error is defined %}
{% set errLog =  (error == "Bad credentials") ? "Invalid email or password." : error %}
{% endif %}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="noindex, nofollow"/>
    <title>{{ title }}</title>

    <!-- Bootstrap -->
    <link href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.1/lumen/bootstrap.min.css" rel="stylesheet">
	<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="{{ baseUrl }}css/admin-style.css" rel="stylesheet">
	{% block styles %}
	{% endblock %}

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
  <div style="width:100%;padding:0;margin:0">
    <a href="{{baseUrl}}"><img src="{{baseUrl}}img/header.jpg" style="width:100%;height:auto"/></a>
  </div>
  {% block navbar %}
    {% include 'general/navbar.twig' %}
  {% endblock %}
  
  <div class="container global-container">
  <div class="row">
  {% block content %}{% endblock %}
  </div>
  </div>
  
  <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
  <script>
  	var config = {
		doc: $(document),
		baseUrl: "{{ baseUrl }}",
	}

    $("input[type=number]").keypress(function (e) {
        //if the letter is not digit then display error and don't type anything
        if (e.which != 8 && e.which != 0 && (e.which < 48 || e.which > 57)) {
            //display error message
            return false;
        }
    });
  </script>
  {% block scripts %}{% endblock %}
  </body>
</html>