{% set type_ = (type_ is defined and type_ is not empty) ? type_ : null %}
{% for k, prize in prizes %}
  <div class="col-sm-6 col-md-4" data-id="{{ prize.getId }}">
    <div class="thumbnail">
      <img src="{{ path('img-thumb', {params: '260x260c', q: prize.getPrizeImage }) }}" alt="{{ prize.getPrizeTitle }}" />
      <div class="caption">
        <h3>{{ prize.getPrizeTitle }}</h3>
        <p>{{ prize.getPrizeDesc }}</p>
        <p>
        {% if isprizes[k] == 0 %}
        <a href="#" class="btn btn-success btn-xs add-prize" data-type="{{ type_ }}" data-status="{{ isprizes[k] }}" role="button" data-toggle="tooltip" data-placement="top" title="Add"><i class="fa fa-fw fa-plus"></i></a>
        {% else %}
        <a href="#" class="btn btn-danger btn-xs add-prize" data-type="{{ type_ }}" data-status="{{ isprizes[k] }}" role="button" data-toggle="tooltip" data-placement="top" title="Remove"><i class="fa fa-fw fa-minus"></i></a>
        {% endif %}
        </p>
      </div>
    </div>
  </div>
{% endfor %}